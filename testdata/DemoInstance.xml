<?xml version="1.0" encoding="UTF-8"?>
<root>
	<style1 description="Mapping with well delimited structures (most common case)">
		<people>
			<person>
				<lastname>Smith</lastname>
				<firstname>Bob</firstname>
				<age>30</age>
			</person>
			<person>
				<lastname>Jones</lastname>
				<firstname>Wendy</firstname>
				<age>28</age>
				<gender>female</gender>
			</person>
		</people>
	</style1>
	<style2 description="Mapping with flattened structures, i.e. order of elements denotes structure (unusual)">
		<lastname>Smith</lastname>
		<firstname>Bob</firstname>
		<age>30</age>
		<lastname>Jones</lastname>
		<firstname>Wendy</firstname>
		<age>28</age>
		<gender>female</gender>
	</style2>
	<style3 description="PivotMapping with well delimited structures (semi-common)">
		<people>
			<person>
				<attr>lastName</attr>
				<value>Smith</value>
				<attr>firstName</attr>
				<value>Bob</value>
				<attr>age</attr>
				<value>30</value>
			</person>
			<person>
				<attr>lastName</attr>
				<value>Jones</value>
				<attr>firstName</attr>
				<value>Wendy</value>
				<attr>age</attr>
				<value>28</value>
				<attr>gender</attr>
				<value>female</value>
			</person>
		</people>
	</style3>
	<style4 description="PivotMapping with flattened structure, i.e. order of elements denotes structure (uncommon except for RDF)">
		<attr>lastName</attr>
		<value>Smith</value>
		<attr>firstName</attr>
		<value>Bob</value>
		<attr>age</attr>
		<value>30</value>
		<attr>lastName</attr>
		<value>Jones</value>
		<attr>firstName</attr>
		<value>Wendy</value>
		<attr>age</attr>
		<value>28</value>
		<attr>gender</attr>
		<value>female</value>
	</style4>
</root>