<?xml version="1.0" encoding="UTF-8"?>

<!-- Lots of different ways of interpreting GroupDemo.xml -->
<m:MappingConfiguration xmlns:m="http://locima.com/xml2csv/MappingConfiguration">

	<m:MappingList name="GroupDemo1" mappingRoot="root">
		<m:Mapping xPath="names/name" />
		<m:Mapping xPath="interests/interest"/>
	</m:MappingList>

	<m:MappingList name="GroupDemo2" mappingRoot="root">
		<m:Mapping xPath="names/name" group="1"/>
		<m:Mapping xPath="interests/interest" group="2"/>
	</m:MappingList>

	<m:MappingList name="GroupDemo3" mappingRoot="root">
		<m:Mapping xPath="names/name" group="2" />
		<m:Mapping xPath="interests/interest" group="1"/>
	</m:MappingList>

	<m:MappingList name="GroupDemo4" mappingRoot="root">
		<m:Mapping xPath="names/name" group="1" behaviour="Greedy"/>
		<m:Mapping xPath="interests/interest" group="2"/>
	</m:MappingList>

</m:MappingConfiguration>
