<?xml version="1.0" encoding="UTF-8"?>

<m:MappingConfiguration xmlns:m="http://locima.com/xml2csv/MappingConfiguration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<!-- STYLE 1 -->

	<!-- Each family member on a separate line -->
	<m:MappingList mappingRoot="root/style1/people/person" name="DemoStyle1Output1">
		<m:Mapping xPath="firstname" onInlineDetected="Error" />
		<m:Mapping xPath="lastname" onInlineDetected="Error" />
		<m:Mapping xPath="age" onInlineDetected="Error" />
		<m:Mapping xPath="gender" onInlineDetected="Error" />
	</m:MappingList>

	<!-- All family members on one line in field order (all last names, then all firstnames, etc.) -->
	<m:MappingList mappingRoot="root/style1/people" name="DemoStyle1Output2">
		<m:Mapping xPath="person/firstname" inlineStyle="WithParentCount" />
		<m:Mapping xPath="person/lastname" inlineStyle="WithParentCount" />
		<m:Mapping xPath="person/age" inlineStyle="WithParentCount" />
		<m:Mapping xPath="person/gender" inlineStyle="WithParentCount" />
	</m:MappingList>

	<!-- All family members on one line, person at a time (lastname1, firstname1, age1, gender1, lastname2, firstname2, etc.) -->
	<m:MappingList mappingRoot="root/style1/people" name="DemoStyle1Output3">
		<m:MappingList name="person" mappingRoot="person">
			<m:Mapping xPath="firstname" inlineStyle="WithParentCount" />
			<m:Mapping xPath="lastname" inlineStyle="WithParentCount" />
			<m:Mapping xPath="age" inlineStyle="WithParentCount" />
			<m:Mapping xPath="gender" inlineStyle="WithParentCount" />
		</m:MappingList>
	</m:MappingList>

	<!-- STYLE 2 -->

	<!-- Each family member on a separate line -->
	<m:MappingList mappingRoot="root/style1/people/person" name="DemoStyle2Output1">
		<m:Mapping xPath="firstname" multiValueBehaviour="RoundRobinMultiRecord" inlineStyle="WithCount" />
		<m:Mapping xPath="lastname" multiValueBehaviour="RoundRobinMultiRecord" inlineStyle="WithCount" />
		<m:Mapping xPath="age" multiValueBehaviour="RoundRobinMultiRecord" inlineStyle="WithCount" />
		<m:Mapping xPath="gender" multiValueBehaviour="RoundRobinMultiRecord" inlineStyle="WithCount" />
	</m:MappingList>

	<!-- All family members on one line in field order (all last names, then all firstnames, etc.) -->
	<m:MappingList mappingRoot="root/style1/people" name="DemoStyle2Output2">
		<m:Mapping xPath="person/firstname" multiValueBehaviour="AllAtOnceInline" inlineStyle="WithCount" />
		<m:Mapping xPath="person/lastname" multiValueBehaviour="AllAtOnceInline" inlineStyle="WithCount" />
		<m:Mapping xPath="person/age" multiValueBehaviour="AllAtOnceInline" inlineStyle="WithCount" />
		<m:Mapping xPath="person/gender" multiValueBehaviour="AllAtOnceInline" inlineStyle="WithCount" />
	</m:MappingList>

	<!-- All family members on one line, person at a time (lastname1, firstname1, age1, gender1, lastname2, firstname2, etc.) -->
	<m:MappingList mappingRoot="root/style1/people" name="DemoStyle2Output3">
		<m:MappingList name="person" mappingRoot="person">
			<m:Mapping xPath="firstname" multiValueBehaviour="RoundRobinInline" inlineStyle="WithParentCount" />
			<m:Mapping xPath="lastname" multiValueBehaviour="RoundRobinInline" inlineStyle="WithParentCount" />
			<m:Mapping xPath="age" multiValueBehaviour="RoundRobinInline" inlineStyle="WithParentCount" />
			<m:Mapping xPath="gender" multiValueBehaviour="RoundRobinInline" inlineStyle="WithParentCount" />
		</m:MappingList>
	</m:MappingList>

</m:MappingConfiguration>