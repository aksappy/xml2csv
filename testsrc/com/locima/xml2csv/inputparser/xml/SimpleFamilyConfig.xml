<?xml version="1.0" encoding="UTF-8"?>

<MappingSet inputSchema="http://www.example.com/xml2csv/family"
	xmlns="http://locima.com/xml2csv/MappingSet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<Mapping mappingRoot="/family" outputName="family">
		<Field name="Family" xPath="name" />
		<Field name="Address" xPath="address" />

		<!-- Create a separate file containing all the members of the family. This 
			represents a 1..n mapping between families and family members. -->
		<Mapping mappingRoot="/family/person" outputName="People">

			<!-- Use a linking field, which is the name of the family (from our parent) -->
			<Field name="Family" xPath="../name" />

			<!-- Include the properties of the family members -->
			<!-- Name comes from the child element "name" under person -->
			<Field name="Name" xPath="name" />
			<!-- Age comes from the age attribute of the mappingRoot -->
			<Field name="Age" xPath="@age" />
		</Mapping>

	</Mapping>
</MappingSet>