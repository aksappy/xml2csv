<?xml version="1.0" encoding="UTF-8"?>

<!-- Output every Level2 element's data in a single row, i.e. inline levels 
	3 and 4 -->
<MappingConfiguration inputSchema="http://www.example.com/xml2csv/family"
	xmlns="http://locima.com/xml2csv/MappingConfiguration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<MappingList mappingRoot="/Level1/Level2" name="HeavilyNestedInstance">
		<Mapping name="Level1" xPath="../@data" />
		<Mapping name="Level2" xPath="@data" />
		<MappingList name="Level3List" mappingRoot="Level3">
			<Mapping name="Level3" xPath="@data" />
			<MappingList name="Level4List" mappingRoot="Level4">
				<Mapping name="Level4" xPath="@data" />
			</MappingList>
		</MappingList>
	</MappingList>
</MappingConfiguration>